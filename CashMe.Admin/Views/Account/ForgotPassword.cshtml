@using CashMe.Shared.Models
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu?";
}

<div class="col-md-4 col-md-offset-4" style="margin-top:35px;margin-bottom:35px">
    <aside id="tg-sidebar" class="tg-sidebar">
        <div class="tg-widget tg-widgetlogin">
            <div class="tg-widgetcontent">
                <div class="tg-widgettitle">
                    <h3>@ViewData["Title"]</h3>
                </div>
                @using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "tg-themeform tg-formsignin", role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    <h4>Nhập email xác thực reset lại mật khẩu.</h4>
                    @*<hr />*@
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group tg-formgroup">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email xác thực" })
                    </div>                    
                    <button class="tg-btn tg-btn-lg" type="submit">Xác nhận</button>
                }
            </div>
            <a href="@Url.Action("Login","Account")" class="tg-btnforgotpassword">Đã có tài khoản? Đăng nhập</a>         
        </div>
    </aside>
</div>

