@model CashMe.Shared.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="col-md-4 col-md-offset-4" style="margin-top:35px;margin-bottom:35px">
    <aside id="tg-sidebar" class="tg-sidebar">
        <div class="tg-widget tg-widgetlogin">
            <div class="tg-widgetcontent">
                <div class="tg-widgettitle">
                    <h3>Đăng ký</h3>
                </div>
                @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "tg-themeform tg-formsignin", role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    <h4>Nhập đầy đủ thông tin để đăng ký.</h4>
                    @*<hr />*@
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group tg-formgroup">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Tên tài khoản" })
                    </div>
                    <div class="form-group tg-formgroup">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                    </div>
                    <div class="form-group tg-formgroup">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "Số điện thoại" })
                    </div>
                    <div class="form-group tg-formgroup">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                    </div>
                    <div class="form-group tg-formgroup">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Nhập lại mật khẩu" })
                    </div>
                    <button class="tg-btn tg-btn-lg" type="submit">Đăng Ký</button>
                }
            </div>
            <a href="@Url.Action("Login","Account")" class="tg-btnforgotpassword">Đã có tài khoản? Đăng nhập</a>
            <a href="@Url.Action("ForgotPassword","Account")" class="tg-btnforgotpassword">Quên mật khẩu?</a>
        </div>
    </aside>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
