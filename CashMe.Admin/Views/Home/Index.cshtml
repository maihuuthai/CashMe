*************************************-->
<section class="tg-main-section tg-haslayout tg-parallaximg tg-imgoverlap" data-bleed="-17" data-appear-top-offset="600" data-parallax="scroll" data-image-src="/Content/assets/images/parallax/bgparallax-02.jpg">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-xs-12">
                <div class="tg-statisticscounters">
                    <div class="row">
                        <div class="tg-counter">
                            <figure><img src="~/Content/assets/images/icons/icon-05.png" alt="image description"></figure>
                            <h2><span data-from="0" data-to="8000" data-speed="8000" data-refresh-interval="50">8000+</span></h2>
                            <h3>Lượt truy cập</h3>
                        </div>
                        <div class="tg-counter">
                            <figure><img src="~/Content/assets/images/icons/icon-06.png" alt="image description"></figure>
                            <h2><span data-from="0" data-to="154" data-speed="8000" data-refresh-interval="50">154+</span></h2>
                            <h3>Thành viên</h3>
                        </div>
                        <div class="tg-counter">
                            <figure><img src="~/Content/assets/images/icons/icon-07.png" alt="image description"></figure>
                            <h2><span data-from="0" data-to="24" data-speed="8000" data-refresh-interval="50">24+</span></h2>
                            <h3>Cash back</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 hidden-xs">
                <figure class="tg-sectionimg"><img src="~/Content/assets/images/image_footer.png" alt="image description"></figure>
            </div>
        </div>
    </div>
</section>
